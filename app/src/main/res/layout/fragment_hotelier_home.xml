<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">

    <!-- Welcome Message -->
    <TextView
        android:id="@+id/welcomeMessageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello!"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="8dp" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/subtitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your hotel at a glance"
        android:textSize="18sp"
        android:textColor="@color/gray"
        android:layout_marginBottom="24dp" />

    <!-- Statistics Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Total Bookings -->
            <TextView
                android:id="@+id/totalBookingsLabelTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Bookings"
                android:textSize="16sp"
                android:textColor="@color/gray"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/totalBookingsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="16dp" />

            <!-- Total Revenue -->
            <TextView
                android:id="@+id/totalRevenueLabelTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Revenue"
                android:textSize="16sp"
                android:textColor="@color/gray"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/totalRevenueTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$0.00"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/black" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>