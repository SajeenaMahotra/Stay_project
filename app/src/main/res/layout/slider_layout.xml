<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF">

    <!-- Title Text: "Find Your" -->
    <TextView
        android:id="@+id/textTitleLine1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find Your"
        android:textSize="24sp"
        android:fontFamily="@font/montserrat"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="" />

    <!-- Title Text: "Perfect Stay." -->
    <TextView
        android:id="@+id/textTitleLine2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Perfect "
        android:textSize="24sp"
        android:fontFamily="@font/montserrat"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="8dp" />


    <TextView
        android:id="@+id/textStay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:fontFamily="@font/montserrat"
        android:text="Stay."
        android:textColor="#FF0000"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop=""
        android:fontFamily="@font/montserrat"
        android:text="Discover the best hotels\nat your fingertips."
        android:textColor="#000000"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/titleImage"
        android:layout_width="match_parent"
        android:layout_height="295dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/slideone" />

</LinearLayout>
